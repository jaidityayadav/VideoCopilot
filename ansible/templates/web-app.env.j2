# Web App Environment Configuration
DATABASE_URL={{ database_url }}
NEXTAUTH_URL={{ nextauth_url | default('http://localhost:3000') }}
NEXTAUTH_SECRET={{ nextauth_secret }}

# AWS Configuration
AWS_ACCESS_KEY_ID={{ aws_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key }}
AWS_REGION={{ aws_region }}
AWS_S3_BUCKET={{ aws_s3_bucket }}

# Service URLs (internal Kubernetes DNS)
VIDEO_PROCESSING_SERVICE_URL=http://video-processing-service:8002
INTELLIGENCE_SERVICE_URL=http://intelligence-service:8001
EMBEDDING_SERVICE_URL=http://embedding-service:8000

# Application Configuration
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# File Upload Configuration
MAX_FILE_SIZE=500MB
ALLOWED_FILE_TYPES=mp4,avi,mov,mkv,webm

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Health Check
HEALTH_CHECK_PATH=/api/health