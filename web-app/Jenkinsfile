pipeline {
    agent any

    environment {
        APP_NAME = "videocopilot-web-app"
        APP_DIR = "/var/jenkins_home/workspace/VideoCopilot-Deploy/web-app"
        NODE_ENV = "production"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                dir(APP_DIR) {
                    sh "npm ci"
                }
            }
        }

        stage('Prisma Setup') {
            steps {
                dir(APP_DIR) {
                    sh "npx prisma generate"
                    sh "npx prisma migrate deploy || true"
                }
            }
        }

        stage('Run Application') {
            steps {
                dir(APP_DIR) {
                    sh "pm2 start npm --name ${APP_NAME} --interpreter none -- start"
                }
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed."
        }
    }
}
